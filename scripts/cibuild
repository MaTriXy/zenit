#!/usr/bin/env node
var zipdir = require('zip-dir');
var path = require('path');

zipdir(path.join(__dirname, 'bin', 'Zenit-win32-ia32'), { saveTo: 'Zenit-win32-ia32.zip' }, function (err, buffer) {
  // `buffer` is the buffer of the zipped file
  console.log('App win32-ia32 zipped!');
});

zipdir(path.join(__dirname, 'bin', 'Zenit-win32-x64'), { saveTo: 'Zenit-win32-x64.zip' }, function (err, buffer) {
  // `buffer` is the buffer of the zipped file
  console.log('App win32-x64 zipped!');
});

zipdir(path.join(__dirname, 'bin', 'Zenit-linux-ia32'), { saveTo: 'Zenit-linux-ia32.zip' }, function (err, buffer) {
  // `buffer` is the buffer of the zipped file
  console.log('App linux-ia32 zipped!');
});

zipdir(path.join(__dirname, 'bin', 'Zenit-linux-x64'), { saveTo: 'Zenit-linux-x64.zip' }, function (err, buffer) {
  // `buffer` is the buffer of the zipped file
  console.log('App linux-x64 zipped!');
});

zipdir(path.join(__dirname, 'bin', 'Zenit-darwin-x64'), { saveTo: 'Zenit-darwin-x64.zip' }, function (err, buffer) {
  // `buffer` is the buffer of the zipped file
  console.log('App darwin-x64 zipped!');
});
